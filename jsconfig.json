{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "checkJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string"
    ],
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@typings/*": ["typings/*"],
      "@architect/shared/*": ["src/shared/*"],
			"$app/*": [".svelte/dev/runtime/app/*", ".svelte/build/runtime/app/*"],
			"$lib/*": ["src/ui/lib/*"]
    }
  },
  "include": ["./typings", "./src"],
  "exclude": ["node_modules", "./test"]
}
